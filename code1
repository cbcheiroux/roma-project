<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Map</title>
    <style>
        /* Basic styling */
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        #map {
            height: 70vh; /* Set map height */
            width: 100%; /* Full width */
        }

        /* Sidebar styling */
        .sidebar {
            width: 300px;
            max-height: 70vh;
            overflow-y: auto;
            border: 1px solid #ccc;
            margin: 10px;
            padding: 10px;
        }

        .restaurant {
            cursor: pointer;
            padding: 5px;
            border: 1px solid #ddd;
            margin: 5px 0;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .restaurant:hover {
            background-color: #f0f0f0;
        }
    </style>
</head>
<body>
    <h1>My Restaurant Map</h1>
    <div id="map"></div>
    <div class="sidebar">
        <h2>Restaurants</h2>
        <div id="restaurant-list"></div>
    </div>

    <script>
        // Your restaurant data
        const restaurants = [
            {
                name: "Pizza Place",
                lat: 40.7128,
                lng: -74.0060,
                cuisine: "Italian",
                rating: "4.5"
            },
            {
                name: "Sushi Spot",
                lat: 40.7138,
                lng: -74.0080,
                cuisine: "Japanese",
                rating: "4.8"
            },
            {
                name: "Burger Joint",
                lat: 40.7118,
                lng: -74.0040,
                cuisine: "American",
                rating: "4.0"
            },
            // Add more restaurants as needed
        ];

        let map;
        let markers = [];

        function initMap() {
            // Set the initial map location and zoom level
            const location = { lat: 40.7128, lng: -74.0060 }; // New York City

            map = new google.maps.Map(document.getElementById("map"), {
                zoom: 12,
                center: location,
            });

            // Add markers and list to the sidebar
            addMarkersAndList();
        }

        function addMarkersAndList() {
            const restaurantList = document.getElementById("restaurant-list");

            restaurants.forEach((restaurant) => {
                // Create a marker
                const marker = new google.maps.Marker({
                    position: { lat: restaurant.lat, lng: restaurant.lng },
                    map: map,
                    title: restaurant.name,
                });

                markers.push(marker);

                // Create a list item for the restaurant
                const listItem = document.createElement("div");
                listItem.className = "restaurant";
                listItem.innerText = `${restaurant.name} - ${restaurant.cuisine} (Rating: ${restaurant.rating})`;
                
                // Add click event to the list item
                listItem.addEventListener("click", () => {
                    map.setCenter(marker.getPosition());
                    map.setZoom(15); // Zoom in on the selected restaurant
                });

                restaurantList.appendChild(listItem);
            });
        }
    </script>

    <!-- Load the Google Maps JavaScript API -->
    <script async
        src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap">
    </script>
</body>
</html>
